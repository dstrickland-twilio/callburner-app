PORT=4000

# Core Twilio credentials (get from https://console.twilio.com)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_API_KEY=your_api_key
TWILIO_API_SECRET=your_api_secret

# TwiML app that points to POST https://<public-url>/voice
TWILIO_TWIML_APP_SID=your_twiml_app_sid

# Verified / purchased number used as callerId when dialing PSTN numbers
TWILIO_CALLER_ID=+1234567890

# Public URL that Twilio can reach
# For local development: use ngrok (e.g., https://abc123.ngrok.io)
# For production: your server's public URL
PUBLIC_BASE_URL=http://localhost:4000

# Enable transcription simulation for local development
# Set to true to always simulate, or leave false to auto-enable for localhost
SIMULATE_TRANSCRIPTION=false
